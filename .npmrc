# Increase timeout to 60 seconds (60000ms) to handle slow network connections
timeout=60000

# Set registry timeout to 60 seconds
registry-timeout=60000

# Increase fetch timeout for package downloads
fetch-timeout=60000

# Set fetch retry attempts
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
fetch-retries=3

# Enable progress display for better feedback during long operations
progress=true

# Set audit level to moderate to avoid unnecessary network calls
audit-level=moderate